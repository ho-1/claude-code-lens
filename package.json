{
  "name": "claude-code-lens",
  "displayName": "Claude Code Lens",
  "description": "Visualize and manage .claude configuration folders in VS Code. Browse, edit, and organize your Claude Code configurations with ease.",
  "version": "0.2.3",
  "publisher": "Byungho",
  "icon": "resources/icon.png",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other",
    "Visualization"
  ],
  "keywords": [
    "claude",
    "claude-code",
    "anthropic",
    "ai",
    "lens"
  ],
  "galleryBanner": {
    "color": "#1a1a2e",
    "theme": "dark"
  },
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "Claude Code Lens",
      "properties": {
        "claudeLens.commit.model": {
          "type": "string",
          "default": "haiku",
          "enum": [
            "haiku",
            "sonnet",
            "opus"
          ],
          "enumDescriptions": [
            "Claude Haiku - Fast and cost-effective",
            "Claude Sonnet - Balanced performance",
            "Claude Opus - Most capable model"
          ],
          "description": "Claude model to use for commit message generation"
        },
        "claudeLens.commit.prompt": {
          "type": "string",
          "default": "Generate a conventional commit message for the following git diff.\n\nRules:\n- Use format: type(scope): description\n- Types: feat, fix, docs, style, refactor, test, chore\n- Keep first line under 72 characters\n- Be specific and concise\n- Output plain text only, no markdown, no code blocks, no backticks\n\nDiff:",
          "description": "Custom prompt for commit message generation",
          "editPresentation": "multilineText"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "claude-lens",
          "title": "Claude Lens",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "claude-lens": [
        {
          "id": "claudeLensStats",
          "name": "Overview",
          "type": "webview"
        },
        {
          "id": "claudeLensView",
          "name": "Config Files"
        }
      ]
    },
    "commands": [
      {
        "command": "claudeLens.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "claudeLens.openFile",
        "title": "Open File"
      },
      {
        "command": "claudeLens.openDashboard",
        "title": "Open Dashboard",
        "icon": "$(dashboard)"
      },
      {
        "command": "claudeLens.newFile",
        "title": "New File...",
        "icon": "$(new-file)"
      },
      {
        "command": "claudeLens.newFolder",
        "title": "New Folder...",
        "icon": "$(new-folder)"
      },
      {
        "command": "claudeLens.delete",
        "title": "Delete",
        "icon": "$(trash)"
      },
      {
        "command": "claudeLens.rename",
        "title": "Rename...",
        "icon": "$(edit)"
      },
      {
        "command": "claudeLens.generateCommit",
        "title": "Generate Commit Message",
        "category": "Claude Lens",
        "icon": "$(sparkle)"
      },
      {
        "command": "claudeLens.stopCommit",
        "title": "Stop Generating",
        "category": "Claude Lens",
        "icon": "$(debug-stop)"
      }
    ],
    "menus": {
      "scm/title": [
        {
          "command": "claudeLens.generateCommit",
          "group": "navigation@0",
          "when": "scmProvider == git"
        }
      ],
      "view/title": [
        {
          "command": "claudeLens.openDashboard",
          "when": "view == claudeLensView || view == claudeLensStats",
          "group": "navigation@1"
        }
      ],
      "view/item/context": [
        {
          "command": "claudeLens.newFile",
          "when": "view == claudeLensView && viewItem =~ /claudeFolder|subfolder/",
          "group": "1_new@1"
        },
        {
          "command": "claudeLens.newFolder",
          "when": "view == claudeLensView && viewItem =~ /claudeFolder|subfolder/",
          "group": "1_new@2"
        },
        {
          "command": "claudeLens.rename",
          "when": "view == claudeLensView && viewItem =~ /subfolder|configFile/",
          "group": "2_edit@1"
        },
        {
          "command": "claudeLens.delete",
          "when": "view == claudeLensView && viewItem =~ /subfolder|configFile/",
          "group": "3_delete@1"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "esbuild src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node",
    "compile:test": "tsc -p ./tsconfig.test.json",
    "watch": "pnpm run compile -- --watch",
    "pretest": "pnpm run compile && pnpm run compile:test",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "test:unit": "mocha --require ts-node/register src/test/suite/*.test.ts"
  },
  "devDependencies": {
    "@types/glob": "^9.0.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.11.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vscode/test-electron": "^2.3.8",
    "esbuild": "^0.20.0",
    "eslint": "^8.56.0",
    "glob": "^13.0.0",
    "mocha": "^10.2.0",
    "typescript": "^5.3.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ho-1/claude-code-lens"
  },
  "bugs": {
    "url": "https://github.com/ho-1/claude-code-lens/issues"
  },
  "homepage": "https://github.com/ho-1/claude-code-lens#readme",
  "license": "MIT"
}
